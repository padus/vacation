{
  // See https://code.visualstudio.com/docs/cpp/c-cpp-properties-schema-reference
  // for the documentation about the c_cpp_properties.json format
  "version": 4,
  "configurations": [
    {
      "name": "debug",
      "includePath": ["${workspaceFolder}/src/**"],
      "defines": ["_DEBUG"],
      "windowsSdkVersion": "10.0.19041.1",
      "compilerPath": "${VCToolsInstallDir}/bin/hostx64/x64/cl.exe",
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "windows-msvc-x64"
    },
    {
      "name": "release",
      "includePath": ["${workspaceFolder}/src/**"],
      "defines": ["NDEBUG"],
      "windowsSdkVersion": "10.0.19041.1",
      "compilerPath": "${VCToolsInstallDir}/bin/hostx64/x64/cl.exe",
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "windows-msvc-x64"
    }
  ]
}
